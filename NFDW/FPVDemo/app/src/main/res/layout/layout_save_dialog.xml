<?xml version="1.0" encoding="utf-8"?>
<me.dreamheart.autoscalinglayout.ASLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/save_dialog">
    <me.dreamheart.autoscalinglayout.ASLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="检测日期:"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="正在获取系统时间..."
            android:textSize="18dp"
            android:layout_gravity="fill_vertical"
            android:id="@+id/sys_time" />
    </me.dreamheart.autoscalinglayout.ASLinearLayout>
    <me.dreamheart.autoscalinglayout.ASLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="测试地点:"
            android:textSize="18dp"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/place"
            android:layout_weight="2"
            android:hint="如：华工100kv"
            />
    </me.dreamheart.autoscalinglayout.ASLinearLayout>



</me.dreamheart.autoscalinglayout.ASLinearLayout>
